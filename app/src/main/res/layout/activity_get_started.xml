<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetStarted"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/a"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sliderTitle"
        android:textSize="30sp"
        android:text="Smart Drinking"
        android:textAlignment="center"
        android:textStyle="bold"/>

<!--JOSE LUIS AQUI PON OTRO MENSAJE ES CON EL QUE VA A INICIAR TU APP-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slideDesc"
        android:textSize="20sp"
        android:layout_marginHorizontal="30dp"
        android:text="@string/screenDescrip2"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Get Started"
        android:background="@drawable/botones"
        android:textColor="@color/textito"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>



</LinearLayout>