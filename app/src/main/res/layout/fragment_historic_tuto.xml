<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Historic.HistoricFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp" />

        <TextView
            android:id="@+id/tv_consumoMensual"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="HOLA TONOTO, AQUI VA TU RESUMEN MENSUAL"
            android:textAlignment="center"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="156dp"
                android:layout_height="202dp"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:src="@drawable/a" />

            <TextView
                android:id="@+id/tv_consumoSemanal"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:text="hola tonoto, aqui va el resumen mensual de tu awa"
                android:textAlignment="center"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_gotita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gota"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/a" />

            <TextView
                android:id="@+id/tv_tutorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Bienvido a la pÃ¡gina de home"
                android:layout_marginEnd="20dp"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>