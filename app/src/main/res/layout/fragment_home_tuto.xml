<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.Home.HomeFragment">

    <LinearLayout
        android:id="@+id/layout_home_tutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/mensaje1_tuto"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="El agua es vida, toma agua, cuida tu vida."
            android:textAlignment="center"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textoProgreso_tuto"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Llevas 1.5 litros de 2 de tu meta diaria"
            android:textAlignment="center"
            android:textSize="14sp"
            android:visibility="gone" />

        <cjh.WaveProgressBarlibrary.WaveProgressBar
            android:id="@+id/waveprogressbar_tuto"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            app:arc_color="@color/textito"
            app:behind_wave_color="#01A1D6"
            app:cavans_bg="@color/botones"
            app:front_wave_color="#9dd8ed"
            app:progress="50"
            app:shape="circle"
            app:text_color="@color/black"
            app:text_size="50sp" />

        <LinearLayout
            android:id="@+id/layout_registro_tuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_registro"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/ml"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:background="@drawable/botones"
                android:textColor="@color/textito"
                android:layout_marginStart="20dp"
                android:text="@string/btn_add" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_gotita_home_tuto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/gota"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/a" />

            <TextView
                android:id="@+id/tv_tutorial_home_tuto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Bienvenido a la pÃ¡gina de progreso.\n Da clic en la pantalla para continuar con el tutorial."
                android:layout_marginEnd="20dp"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>